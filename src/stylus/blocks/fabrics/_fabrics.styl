.fabrics
	display flex
	flex-wrap wrap
	&__title
		flex-basis 100%
		color $black
		font-size 2rem
		font-family $Light
		line-height 39px
		margin 40px 0 30px
	&__grid
		flex-basis 100%
		display grid
		grid-template-columns repeat(4, 1fr)
		gap 10px
		margin-bottom 60px
		&-item
			background-size cover
			display flex
			align-items center
			color $white
			justify-content center
			flex-direction column
			text-align center
			min-height 300px
			position relative
			overflow hidden
			cursor pointer
			&-img
				position absolute
				height 100%
				width 100%
				transition .5s
				z-index 1
			&:before
				content ''
				position absolute
				background-color $white
				opacity .2
				left 0
				top 0
				height 100%
				width 50%
				transform skewX(-20deg) translateX(-200%)
				z-index 2
			&-title
				font-size 2rem
				font-family $Light
				line-height 39px
				margin-bottom 15px
				z-index 1
			&-button
				background-color $white
				color $red
				font-family $Light
				border 1px solid $red
				font-size 1rem
				padding 12px 50px
				transition .3s
				z-index 1
			&:hover .fabrics__item-button
				background-color $red
				color $white
			&:nth-child(1)
				grid-column 1 / 5
				grid-row 1 / 2
			&:nth-child(2)
				grid-column 1 / 3
				grid-row 2 / 4
			&:nth-child(3)
				grid-column 3 / 5
				grid-row 2 / 3
			&:nth-child(4)
				grid-column 3 / 5
				grid-row 3 / 4
			&:nth-child(5)
				grid-column 1 / 5
				grid-row 4 / 5
			&:nth-child(6)
				grid-column 1 / 3
				grid-row 5 / 6
			&:nth-child(7)
				grid-column 3 / 5
				grid-row 5 / 6
			&:nth-child(8)
				grid-column 1 / 5
				grid-row 6 / 7
			&:hover &-img
				transform: scale(1.05);
			&:hover&:before
				transition 1s
				transform skewX(-20deg) translateX(300%)
@media(max-width: 991px)
	.fabrics
		&__grid
			&-item
				height 300px
				&:nth-child(1)
					grid-column 1 / 5
					grid-row 1 / 2
					max-height 300px
				&:nth-child(2)
					grid-column 1 / 3
					grid-row 2 / 3
					max-height 300px
				&:nth-child(3)
					grid-column 3 / 5
					grid-row 2 / 3
					max-height 300px
				&:nth-child(4)
					grid-column 1 / 3
					grid-row 3 / 4
					max-height 300px
				&:nth-child(5)
					grid-column 3 / 5
					grid-row 3 / 4
					max-height 300px
				&:nth-child(6)
					grid-column 1 / 3
					grid-row 4 / 5
					max-height 300px
				&:nth-child(7)
					grid-column 3 / 5
					grid-row 4 / 5
					max-height 300px
				&:nth-child(8)
					grid-column 1 / 5
					grid-row 5 / 6
					max-height 300px
@media(max-width: 767px)
	.fabrics
		display flex
		flex-wrap wrap
		&__grid
			&-item
				height 200px
				min-height 200px
				&:nth-child(1)
					grid-column 1 / 3
					grid-row 1 / 2
					max-height 200px
				&:nth-child(2)
					grid-column 3 / 5
					grid-row 1 / 2
					max-height 200px
				&:nth-child(3)
					grid-column 1 / 3
					grid-row 2 / 3
					max-height 200px
				&:nth-child(4)
					grid-column 3 / 5
					grid-row 2 / 3
					max-height 200px
				&:nth-child(5)
					grid-column 1 / 3
					grid-row 3 / 4
					max-height 200px
				&:nth-child(6)
					grid-column 3 / 5
					grid-row 3 / 4
					max-height 200px
				&:nth-child(7)
					grid-column 1 / 3
					grid-row 4 / 5
					max-height 200px
				&:nth-child(8)
					grid-column 3 / 5
					grid-row 4 / 5
					max-height 200px
				&-title
					font-size 1rem
					font-family $Light
					line-height 17px
					margin-bottom 10px
					width 80%
				&-button
					padding 10px 40px

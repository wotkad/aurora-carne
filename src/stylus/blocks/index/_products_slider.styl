.products__slider
	position relative
	border-bottom 1px solid #EDEDED
	.swiper-slide-active .products__slider-slide
		border-left 1px solid #EDEDED
	&-slide
		display grid
		grid-template-columns 50% 50%
		padding 9px 0
		border-right 1px solid #EDEDED
		min-height 402px
		&-img
			background-size cover
			grid-row 1 / 3
			height 402px
		&-info
			display flex
			flex-direction column
			&:nth-child(2)
				margin-top 10px
			&:nth-child(3)
				margin-bottom 10px
			&__title
				font-family $Light
				font-size 1.125rem
				line-height 22px
				width 80%
				color $textblack
			&__separator
				height 1px
				background-color $red
				width 30%
				margin 20px 0 15px
			&__desc
				&-item
					display flex
					align-items center
					&:nth-child(1)
						margin-bottom 12px
					p
						font-family $Light
						font-size 0.75rem
						line-height 15px
						color $textgray
						margin-left 10px
					span
						font-family $Light
						font-size 0.75rem
						line-height 15px
						color $textblack
						margin-left 3px
			&__subdesc
				p
					font-family $LightItalic
					font-size 0.625rem
					line-height 12px
					color $textgray
					margin-top 7px
					margin-bottom 25px
		&-button
			border 1px solid $red
			padding 7.5px
			width 80%
			font-family $Light
			font-size 0.75rem
			line-height 15px
			color $red
			text-align center
			transition .3s
			letter-spacing 1px
			&:hover
				background $red
				color $white
div.swiper-slide-active:nth-child(1) > div:nth-child(1)
	border-left 1px solid #EDEDED
.swiper-button-prev,
.swiper-button-next
	top calc(50% - 20px)
	background-color $red
	border-radius 50%
	width 50px
	height 50px
	display flex
	align-items center
	justify-content center
	box-shadow 0px 0px 30px rgba(0, 0, 0, 0.1)
	transition .3s
	i
		color $white
		margin-top -1px
		transition .3s
.swiper-button-prev
	background-image none
	left -25px
	i
		margin-left -1px
	&:hover i
		margin-left -9px
.swiper-button-next
	background-image none
	right -25px
	i
		margin-right -1px
	&:hover i
		margin-right -9px
@media(max-width: 1380px)
	.swiper-button-prev,
	.swiper-button-next
		width 30px
		height 30px
		i
			font-size 9px
	.swiper-button-prev
		left 20px
	.swiper-button-next
		right 20px
@media(max-width: 991px)
	.products__slider
		&-slide
			padding 19px 0px
			border-right none
		.swiper-slide-active .products__slider-slide
			border none
	div.swiper-slide-active:nth-child(1) > div:nth-child(1)
		border-left none

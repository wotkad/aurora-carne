.m-clothes
	display flex
	flex-wrap wrap
	justify-content space-between
	&__caption
		display none
		&-close
			height 60px
			background-color #e8e8e8
			display flex
			align-items center
			justify-content center
			cursor pointer
			i
				color $red
				margin-top -3px
				font-size 1rem
			span
				color $red
				font-family $Light
				font-size 1.125rem
				line-height 22px
				margin-left 5px
				transition .3s
				border-bottom 1px dashed #e8e8e8
			&:hover span
				border-bottom 1px dashed $red
		&-desc
			margin 100px 40px 40px 40px
			&-title
				color $black
				font-size 1.5rem
				line-height 36px
				font-family $Regular
				margin-bottom 31px
				text-align left
			&-smalltitle
				display flex
				align-items center
				margin-bottom 9px
				span
					color $footertitle
					font-size 0.75rem
					line-height 14px
					letter-spacing 1px
					font-family $Regular
					text-transform uppercase
					margin-left 8px
			&-text
				color $textblack
				font-family $Light
				font-size 1.25rem
				line-height 30px
				text-align left
				margin-bottom 21px
	&__title
		flex-basis 100%
		color $black
		font-size 2rem
		font-family $Light
		line-height 39px
		margin 40px 0 30px
	&__block
		margin-bottom 50px
		&-process
			margin-bottom 40px
			padding 0 8px 0 12px
			&__img
				margin-bottom 26px
			&__title
				margin-bottom 15px
				font-family $Regular
				font-size 1.25rem
				line-height 30px
				color $black
			&__text
				font-family $Light
				font-size 1rem
				line-height 24px
				color $textblack
		&-title
			margin-bottom 15px
			p
				font-family $Light
				font-size 1.375rem
				line-height 33px
				color $black
				display inline-block
			span
				margin-left 3px
				color $black
				font-family $Medium
				font-size 1.375rem
				line-height 33px
			&:nth-child(3)
				margin-bottom 0
		&:nth-child(2)
			flex-basis 65%
		&:nth-child(3)
			flex-basis 30%
		&:nth-child(4)
			flex-basis 100%
			max-width 100%
		&:nth-child(4) > div:nth-child(1)
			margin-bottom 25px
		&:nth-child(4) > div:nth-child(4)
			margin-bottom 42px
		&-li
			font-size 1rem
			line-height 24px
			font-family $Light
			color $textblack
			margin-bottom 10px
			position relative
			padding-left 15px
			&:before
				content ''
				background-color $red
				width 7px
				height 7px
				display inline-block
				border-radius 50%
				position absolute
				left 0
				top 7px
		&-img
			height 370px
		&-mobtable
			display none
		&-table
			width 100%
			margin-bottom 55px
			&__titles
				width 100%
				background-color #F2F2F2
				display flex
				padding 20px 0
				border-bottom 1px solid #E8E8E8
				&-item
					p
						font-family $Regular
						line-height 14px
						color #2b2b2b
						letter-spacing 1px
						text-transform uppercase
						font-size 0.75rem
					span
						font-family $Light
						line-height 14px
						color #2b2b2b
						letter-spacing 1px
						text-transform uppercase
						font-size 0.75rem
					&:nth-child(1)
						padding-left 29px
						display flex
						flex-basis 20%
					&:nth-child(2)
						flex-basis 30%
					&:nth-child(3)
						flex-basis 5
			&__blocks
				display flex
				padding-top 20px
				padding 15px 0
				&:nth-child(2n+1)
					background-color #FBFBFB
					border-top 1px solid #E8E8E8
					border-bottom 1px solid #E8E8E8
				&-item
					&:nth-child(1)
						font-family $Medium
						color $textblack
						line-height 24px
						font-size 1rem
						padding-left 29px
						display flex
						flex-basis 20%
					&:nth-child(2)
						flex-basis 30%
						p
							font-family $Thin
							line-height 21px
							color $textblack
							font-size 1rem
						span
							font-family $Regular
							line-height 21px
							color $textblack
							font-size 1rem
					&:nth-child(3)
						flex-basis 50%
						p
							font-family $Thin
							line-height 21px
							color $textblack
							font-size 1rem
						span
							font-family $Regular
							line-height 21px
							color $textblack
							font-size 1rem
		&-desc
			display flex
			background-color #F2F2F2
			padding 23px 30px
			&__blocks
				flex-basis 50%
				position relative
				&:nth-child(1)
					display flex
				&-img
					top -27px
					position absolute
					left 26px
				&-title
					padding-left 130px
					p
						font-family $Light
						font-size 1rem
						color $textblack
						line-height 24px
					span
						font-family $Regular
						font-size 1rem
						color $black
						line-height 24px
				&-text
					font-family $ThinItalic
					font-size 1rem
					line-height 21px
					color $textblack
					text-align right
		&-mobdesc
			display none
			margin-top 20px
			font-family $ThinItalic
			font-size 0.875rem
			line-height 16px
			color $textblack
			text-align right
	&__slider-works
		width 100%
		position relative
		margin-bottom 60px
		display block
		.swiper-button-prev,
		.swiper-button-next
			display flex
		div.swiper-slide-active:nth-child(1) > div:nth-child(1)
			border none
	&__slider
		width 100%
		position relative
		display block
		div.swiper-slide-active:nth-child(1) > div:nth-child(1)
			border none
		.swiper-button-prev,
		.swiper-button-next
			display none
		&-work
			height 560px
			position relative
			img
				display none
			&-desc
				transition .3s
				position absolute
				opacity 0
				top 0
				left 15px
				right 15px
				padding 58px 38px
				height 100%
				box-shadow 0px 4px 30px rgba(0, 0, 0, 0.05)
				border-radius 5px
				background linear-gradient(0deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0.3) 99.99%, rgba(255, 255, 255, 0) 100%)
				&__title
					font-family $Regular
					line-height 33px
					color $black
					font-size 1.375rem
					margin-bottom 35px
				&__smalltitle
					text-transform uppercase
					font-size 0.75rem
					line-height 14px
					color $footertitle
					letter-spacing 1px
					font-family $Regular
					margin-bottom 8px
				&__text
					margin-bottom 20px
					font-size 1.375rem
					font-family $Regular
					line-height 33px
					color $textblack
					font-family $Light
				&__button
					button
						border 1px solid $black
						font-family $Light
						text-align center
						padding 12px
						line-height 15px
						letter-spacing 0.7px
						width 100%
						background-color rgba(0,0,0,0)
						cursor pointer
						transition .3s
						&:hover
							background-color $white
			&:hover &-desc
				opacity 1
	&__form
		border 1px solid $black
		padding 35px 65px
		display flex
		justify-content space-between
		&-block
			&:nth-child(1)
				flex-basis 40%
			&:nth-child(2)
				flex-basis 50%
				display flex
				flex-wrap wrap
			&__title
				font-family $Light
				font-size 2rem
				line-height 39px
				color $black
				position relative
				padding-bottom 13px
				&:after
					content ''
					position absolute
					bottom 0
					display inline-block
					width 25%
					background-color #ABABAB
					height 1px
					left 0
			&__text
				padding-top 15px
				font-family $Light
				font-size 0.875rem
				line-height 17px
				color $textblack
			&__input
				flex-basis 33.33334%
				margin-bottom 20px
				input
					border none
					padding 8px
					border-bottom 1px solid #D1D1D1
					font-family $ThinItalic
					font-size 0.875rem
					line-height 17px
					color #8D8D8D
					width 90%
					transition .3s
					&:hover
						border-color $red
					&:focus
						border-color $red
			&__desc
				flex-basis 66.66667%
				p, span
					font-family $Light
					font-size 0.875rem
					line-height 24px
					color $textblack
				span
					margin-right 3px
				a
					font-family $Light
					font-size 0.875rem
					line-height 24px
					color $red
					transition .3s
					&:hover
						color $textblack
			&__button
				flex-basis 33.33334%
				button
					font-family $Light
					font-size 0.75rem
					color $red
					line-height 15px
					padding 9px 26px
					border 1px solid $red
					background none
					width 100%
					cursor pointer
					transition .3s
					&:hover
						background-color $red
						color $white
			&__policy
				flex-basis 33.33334%
				p
					font-family $Light
					font-size 0.625rem
					line-height 15px
					color $textblack
					a
						margin-left 3px
						border-bottom 1px solid $red
						color $red
						transition .3s
						&:hover
							border-color $textblack
.slider8
	padding 30px 0
.lSAction > .lSPrev
	left 0
	display flex
	align-items center
	justify-content center
	i
		margin-left -1px
	&:hover i
		margin-left -9px
.lSAction > .lSNext
	right 0
	display flex
	align-items center
	justify-content center
	i
		margin-right -1px
	&:hover i
		margin-right -9px
.lSAction > a
	top calc(50% - 20px)
	background-color $red
	border-radius 50%
	width 50px
	height 50px
	display flex
	align-items center
	justify-content center
	box-shadow 0px 0px 30px rgba(0, 0, 0, 0.1)
	transition .3s
	opacity 1
	i
		color $white
		margin-top -1px
		transition .3s
@media(max-width: 991px)
	.m-clothes
		&__slider
			.swiper-button-next.swiper-button-disabled,
			.swiper-button-prev.swiper-button-disabled
				opacity 0
		.swiper-button-prev,
		.swiper-button-next
			display flex
		&__block
			&-desc
				padding 12px 18px
				&__blocks
					flex-basis 100%
					&:nth-child(2)
						display none
					&-img
						top -15px
					&-title
						p
							font-family $Thin
							font-family 1rem
							line-height 24px
							color $textblack
						span
							font-family $Regular
							font-family 1rem
							line-height 24px
							color $textblack
			&-table
				display none
			&-mobtable
				display block
				width 100%
				margin-bottom 55px
				&__block
					display flex
					flex-wrap wrap
					&-item
						&:nth-child(1)
							flex-basis 100%
							color #fff
							background-color $textblack
							padding 8px 26px
							font-family $Medium
							line-height 24px
							font-size 1rem
						&:nth-child(2),
						&:nth-child(3)
							flex-basis 50%
							color #2B2B2B
							background-color #F2F2F2
							padding 17px 0 17px 17px
							font-family $Regular
							text-transform uppercase
							line-height 12px
							font-size 0.625rem
							letter-spacing 1px
							border-bottom 1px solid #E8E8E8
						&:nth-child(4)
							border-right 1px solid #E8E8E8
						&:nth-child(4),
						&:nth-child(5)
							flex-basis 50%
							background-color $white
							padding 17px 20px
							p
								font-family $Thin
								color $textblack
								font-size 0.75rem
								line-height 16px
							span
								font-family $Regular
								color $textblack
								font-size 0.75rem
								line-height 16px
			&-mobdesc
				display block
			&:nth-child(1)
				order 1
			&:nth-child(2)
				flex-basis 100%
				order 3
			&:nth-child(3)
				order 2
				margin-bottom 25px
				flex-basis 100%
			&:nth-child(4)
				order 4
		&__form
			padding 20px 25px
			flex-wrap wrap
			&-block
				&:nth-child(1)
					margin-bottom 21px
				&:nth-child(1),
				&:nth-child(2)
					flex-basis 100%
				&__input
					flex-basis 100%
					input
						width 100%
				&__button
					flex-basis 100%
					margin-bottom 25px
				&__desc
					flex-basis 100%
					order 2
				&__policy
					flex-basis 100%
					order 1
					margin-bottom 15px
@media(max-width:500px)
	.m-clothes
		&__slider
			&-work
				&-desc
					left 0
					right 0
					padding 30px 10px

.popup-bg
	background-color rgba(0,0,0,.6)
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index -1
	opacity 0
	transition .3s
	cursor pointer
.popup
	position fixed
	width 461px
	height 370px
	left calc(50% - 230.5px)
	top calc(50% - 185px)
	border 1px solid $white
	padding 20px
	z-index -1
	opacity 0
	transition .3s
	&__container
		background-color $white
		height 100%
		padding 30px 42px 54px 35px
		position relative
		&-title
			font-family $Light
			color $black
			line-height 29px
			font-size 1.5rem
			position relative
		&-separator
			width 33.33334%
			height 2px
			background-color $red
			margin-top 15px
			margin-bottom 29px
		&-close
			position absolute
			right 42px
			top 42px
			cursor pointer
			&:hover svg
				path
					fill $black
			svg
				path
					fill $red
					transition .3s
			i
				display none
		&-form
			&-input input
				width 100%
				height 44px
				border 1px solid #EAEAEA
				padding-left 25px
				font-family $Thin
				line-height 22px
				font-size 1.125rem
				transition .3s
				box-shadow inset 0 0 4px 4px rgba(0,0,0,.04)
				&:hover
					border-color $red
				&:focus
					border-color $red
			&-input
				position relative
			&-input:nth-child(1)
				margin-bottom 10px
			&-input:nth-child(2)
				margin-bottom 15px
			& i
				position absolute
				color #DCDCDC
				right 25px
				top 12px
				font-size 20px
			&-button
				background-color $red
				color $white
				font-family $Thin
				line-height 22px
				font-size 1.25rem
				text-align center
				width 100%
				border none
				height 44px
				letter-spacing 1px
				cursor pointer
				transition .3s
				&:hover
					background-color $red - 10%
.popup__active
	z-index 9999
	opacity 1
	transition .3s
@media(max-width: 650px)
	.popup
		width calc(100% - 50px)
		left auto
		margin 25px
		padding 0
		height 330px
		top calc(50% - 185px)
		&__container
			&-title
				text-align center
			&-separator
				margin-left 33.33334%
			&-close
				border-radius 50%
				background $red
				width 50px
				height 50px
				right -25px
				top -25px
				display flex
				align-items center
				justify-content center
				svg
					display none
				i
					display block
					color $white
					font-size 23px
					transition .3s
				&:hover i
					color $black

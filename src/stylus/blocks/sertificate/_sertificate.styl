.sertificate
	display flex
	flex-wrap wrap
	justify-content space-between
	padding-bottom 60px
	&__title
		flex-basis 100%
		color $black
		font-size 2rem
		font-family $Light
		line-height 39px
		margin 40px 0 30px
	&__text
		font-size 1rem
		line-height 24px
		font-family $Light
		margin-bottom 30px
		color $textblack
	&__image
		width 100%
		margin-bottom 30px
		img
			width 100%
	&__block
		border 1px solid #e9e9e9
		background-color $white
		flex-basis calc(33% - 6px)
		margin-bottom 15px
		padding-bottom 40px
		&:last-child
			margin-right 0
		&-image
			height 240px
			margin-bottom 25px
		&-title
			font-size 2rem
			font-family $Light
			line-height 39px
			color $black
			margin 0 40px
		&-separator
			width 50%
			height 2px
			background-color $red
			margin 25px 40px 28px
		&-text
			margin 0 40px
			p
				display inline-block
				font-family $Light
				font-size 1rem
				line-height 24px
				color $textblack
			span
				font-family $Medium
				font-size 1rem
				line-height 24px
				color $textblack
		&:nth-child(4) > div:nth-child(4) > span:nth-child(2)
		&:nth-child(6) > div:nth-child(4) > span:nth-child(2)
			margin-left 3px
	&__infoblock
		flex-basis 100%
		border 1px solid #E9E9E9
		display flex
		align-items center
		justify-content center
		flex-direction column
		padding 30px
		margin-bottom 15px
		&-title
			font-size 2rem
			line-height 39px
			color $black
			text-align center
			font-family $Light
			margin-bottom 28px
		&-separator
			width 120px
			height 2px
			background-color $red
			margin-bottom 25px
		&-text
			font-family $Light
			color $textblack
			font-size 1rem
			line-height 24px
			width 25%
			text-align center
	&__formsertif
		display flex
		border 1px solid #E9E9E9
		padding 30px 65px 60px
		justify-content space-between
		&-block
			&:nth-child(1)
				flex-basis 41%
			&:nth-child(2)
				flex-basis 50%
			&__title
				font-family $Light
				font-size 2rem
				line-height 39px
				color $black
				margin-bottom 13px
			&__separator
				margin-bottom 15px
				height 1px
				background-color #ABABAB
				width 100px
			&__text
				p
					font-size 0.875rem
					line-height 17px
					font-family $Light
					color $textblack
					&:nth-child(1)
						display inline-block
					span
						font-family $Medium
						font-size 0.875rem
						line-height 17px
						margin-left 3px
			&__form
				display flex
				justify-content space-between
				flex-wrap wrap
				&-input
					border-bottom 1px solid #D1D1D1
					flex-basis 48%
					margin-bottom 5px
					span
						font-family $Light
						font-size 0.875rem
						line-height 17px
					&:nth-child(5),
					&:nth-child(6)
						flex-basis 100%
					&:nth-child(6)
						border none
						input
							width auto
					input
						padding 15px 10px 10px
						border none
						width 100%
						font-family $Thin
						font-size 0.875rem
					label
						transition .3s
						&:hover
							color $red
				&-button
					border 1px solid $red
					flex-basis 48%
					font-family $Light
					color $red
					background-color $white
					transition .3s
					cursor pointer
					padding 11px
					&:hover
						color $white
						background-color $red
				&-policy
					flex-basis 48%
					p
						font-family $Light
						font-size 0.625rem
						line-height 15px
					a
						margin-left 3px
						line-height 15px
						font-size 0.625rem
						display inline-block
						color $red
						font-family $Italic
						border-bottom 1px solid $red
						transition .3s
						&:hover
							color $red - 20%
							border-color $red - 20%
@media(max-width:991px)
	.sertificate
		&__block
			flex-basis 100%
		&__infoblock
			&-text
				width 75%
		&__formsertif
			padding 20px 25px
			flex-wrap wrap
			&-block
				&:nth-child(1),
				&:nth-child(2)
					flex-basis 100%
				&__form
					&-input
						flex-basis 100%
					&-button
						flex-basis 100%
						margin-bottom 12px
					&-policy
						flex-basis 100%
.radio
	display none

.radio-custom
	width 20px
	height 20px
	border-radius 3px
	border 1px solid #D1D1D1
	position relative
	margin 15px
	transition .3s
	cursor pointer
	border-radius 50%

.radio-custom,
.label
	display inline-block
	vertical-align middle
	cursor pointer

.radio:checked + .radio-custom
	background $white

.radio:checked + .radio-custom + .label
	color $red

.radio:checked + .radio-custom::before
	content ''
	display block
	position absolute
	top 0
	right 0
	bottom 0
	left 0

.radio:checked + .radio-custom::after
	content ""
	display block
	position absolute
	top 3px
	left 3px
	background $red
	border-radius 50%
	width 12px
	height 12px

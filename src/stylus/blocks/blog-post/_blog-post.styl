.blogpost
	display flex
	flex-wrap wrap
	justify-content space-between
	&__title
		flex-basis 100%
		color $black
		font-size 2rem
		font-family $Light
		line-height 39px
		margin 40px 0 30px
		span
			&:nth-child(1)
				border-bottom 1px solid $black
			&:nth-child(2)
				margin 0 10px
	&__sidebar
		flex-basis 25%
		&-block
			box-shadow 0px 4px 15px rgba(0, 0, 0, 0.03)
			position sticky
			margin-bottom 60px
			top 0
			&-titles
				display none
				justify-content space-between
				position relative
				&-title
					background-color $red
					padding 25px 40px
					width 100%
					font-family $Light
					font-size 1.125rem
					line-height 22px
					color $white
				&-button
					cursor pointer
					position absolute
					right 40px
					top calc(50% - 8px)
					width 16px
					height 16px
					display flex
					align-items center
					justify-content center
					transition .3s
			&-cats
				padding 30px 40px
				border 1px solid $red
				&__item
					font-family $Light
					font-size 1.125rem
					line-height 54px
					border-bottom 1px solid #EDEDED
					transition .3s
					position relative
					overflow hidden
					display block
					&:hover
						color $red
						padding-left 16px
					&:after
						content ''
						position absolute
						left -8px
						height 2px
						background-color $red
						width 8px
						top 26px
						transition .3s
					&:last-child
						border none
					&:hover&:after
						left 0
			&-tags
				border 1px solid #EDEDED
				position sticky
				padding 30px 40px
				top 446px
				&__title
					text-transform uppercase
					line-height 14px
					letter-spacing 1px
					font-family $Regular
					font-size 0.75rem
					margin-bottom 5px
				&__item
					font-family $Light
					font-size 1.125rem
					line-height 22px
					color $red
					display inline-block
					margin-bottom 10px
					margin-right 18px
					transition .3s
					&:last-child
						margin-bottom 0
					&:hover
						color $red - 20%
	&__container
		display flex
		flex-wrap wrap
		flex-basis 72%
		max-width 72%
		&-image
			width 100%
			height 414px
			position relative
			&__cat
				position absolute
				bottom 25px
				left 30px
				display flex
				&-item
					&:nth-child(1)
						background-color $red
						color $white
						font-size 1rem
						line-height 19px
						letter-spacing 1px
						font-family $Regular
						margin-right 17px
						padding 7px 20px
						text-transform uppercase
						transition .3s
						&:hover
							color $red
							background-color $white
					&:nth-child(2)
						background-color $white
						color #606060
						font-size 1rem
						line-height 19px
						letter-spacing 1px
						font-family $Regular
						padding 7px
			&__tags
				position absolute
				bottom 25px
				right 30px
				display flex
				&-item
					background-color $textblack
					color $white
					font-size 1rem
					line-height 19px
					letter-spacing 1px
					font-family $Regular
					padding 7px 20px
					text-transform uppercase
					margin-left 15px
					transition .3s
					&:hover
						color $textblack
						background-color $white
		&-title
			font-size 2.625rem
			font-family $Light
			color $black
			padding 35px 0 30px
		&-text
			border-top 1px solid #C8C8C8
			border-bottom 1px solid #C8C8C8
			padding 30px 0 45px
			p
				color $textblack
				font-family $Light
				line-height 24px
				font-size 1rem
				margin-bottom 8px
			h2
				font-family $Light
				color $black
				line-height 31px
				font-size 1.625rem
				padding 25px 0 15px
				font-weight normal
		&-slider
			width 100%
			position relative
			margin-top 45px
			margin-bottom 60px
			&__item
				flex-basis 32%
				padding 30px 24px
				height 360px
				display flex
				justify-content flex-end
				flex-direction column
				position relative
				&:nth-child(3)
					margin-right 0
				&-category
					text-transform uppercase
					color $white
					letter-spacing 1px
					line-height 14px
					font-size 0.75rem
					font-family $Regular
					background-color $textblack
					padding 7px 10px 5px
					display flex
					align-items center
					position absolute
					top 30px
					left 24px
					transition .3s
					&:hover
						color #606060
				&-date
					text-transform uppercase
					color #606060
					letter-spacing 1px
					line-height 14px
					font-size 0.75rem
					font-family $Regular
					background-color $white
					padding 5px
					position absolute
					right 24px
					display flex
					align-items center
					top 30px
				&-title
					color $black
					font-family Light
					line-height 27px
					font-size 1.125rem
					background-color $white
					display flex
					align-items center
					padding 13px 60px 13px 16px
					position relative
					justify-content space-between
					&-link
						background-color $textblack
						padding 13px 26px
						position absolute
						right 0
						bottom 0
						align-items center
						display flex
						height 100%
						transition .3s
						svg
							transition .3s
							position absolute
							margin-left -1.5px
						&:hover svg
							margin-left 5px
.hide
	display none
@media(max-width: 991px)
	.blogpost
		&__sidebar
			flex-basis 100%
			&-block
				margin-bottom 25px
				&-titles
					display flex
		&__container
			flex-basis 100%
			max-width 100%
			&-item
				flex-basis 100%
@media(max-width: 767px)
	.blogpost
		&__container
			&-image
				&__tags
					display block
					top 10px
					left 30px
					bottom auto
					right auto
					width 65%
					&-item
						display inline-block
						margin-left 0
						margin-right 15px
						min-width 140px
						margin-top 15px
						text-align center
				&__cat
					justify-content space-between
					right 30px

.blog
	margin-top 30px
	margin-bottom 60px
	display flex
	flex-wrap wrap
	justify-content space-between
	&__item
		flex-basis 32%
		padding 30px 24px
		height 360px
		display flex
		justify-content flex-end
		flex-direction column
		position relative
		&:nth-child(3)
			margin-right 0
		&-category
			text-transform uppercase
			color $white
			letter-spacing 1px
			line-height 14px
			font-size 0.75rem
			font-family $Regular
			background-color $textblack
			padding 7px 10px 5px
			display flex
			align-items center
			position absolute
			top 30px
			z-index 12
			left 24px
			transition .3s
			&:hover
				color #606060
		&-date
			text-transform uppercase
			color #606060
			letter-spacing 1px
			line-height 14px
			font-size 0.75rem
			font-family $Regular
			background-color $white
			padding 5px
			position absolute
			right 24px
			display flex
			align-items center
			top 30px
		&-title
			color $black
			font-family Light
			line-height 27px
			font-size 1.125rem
			background-color $white
			display flex
			align-items center
			padding 13px 60px 13px 16px
			position relative
			justify-content space-between
			&-link
				background-color $textblack
				padding 13px 26px
				position absolute
				right 0
				bottom 0
				align-items center
				display flex
				height 100%
				transition .3s
				svg
					transition .3s
					position absolute
					margin-left -1.5px
		&:hover .blog__item-title-link svg
			margin-left 5px
	&__button
		margin-top 10px
		border 1px solid $textblack
		flex-basis 100%
		padding 26px
		color $black
		font-family $Light
		letter-spacing 3%
		font-size 1.5rem
		line-height 29px
		text-align center
		transition .3s
		&:hover
			background-color $textblack
			color $white
	.swiper-button-prev,
	.swiper-button-next
		display none
@media(max-width: 991px)
	.blog
		margin-top 15px
		margin-bottom 25px
		&__item
			flex-basis 49%
		.swiper-button-prev,
		.swiper-button-next
			display flex

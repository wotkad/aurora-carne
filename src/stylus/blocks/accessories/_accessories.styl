.accessories
	display flex
	flex-wrap wrap
	&__title
		flex-basis 100%
		display flex
		justify-content space-between
		align-items center
		&-text
			color $black
			font-size 2rem
			font-family $Light
			line-height 39px
			margin 40px 0 30px
		&-cart
			justify-content flex-end
			display flex
			align-items center
			flex-basis 50%
			i
				color $red
				font-size 2rem
			a
				font-size 1.25rem
				font-family $Light
				color $black
				margin-right 5px
				border-bottom 1px solid $red
				transition .3s
				&:hover
					color $red
	&__sidebar
		flex-basis 25%
		&-block
			box-shadow 0px 4px 15px rgba(0, 0, 0, 0.03)
			position sticky
			margin-bottom 60px
			top 0
			&-titles
				display none
				justify-content space-between
				position relative
				&-title
					background-color $red
					padding 25px 40px
					width 100%
					font-family $Light
					font-size 1.125rem
					line-height 22px
					color $white
				&-button
					cursor pointer
					position absolute
					right 40px
					top calc(50% - 8px)
					width 16px
					height 16px
					display flex
					align-items center
					justify-content center
					transition .3s
			&-filters
				padding 30px 40px
				border 1px solid $red
				&__title
					text-transform uppercase
					font-family $Regular
					font-size 0.75rem
					line-height 14px
					letter-spacing 1px
					color $footertitle
					margin-bottom 5px
				&__item
					font-family $Light
					font-size 1.125rem
					line-height 54px
					border-bottom 1px solid #EDEDED
					transition .3s
					position relative
					overflow hidden
					display block
					&:hover
						color $red
						padding-left 16px
					&:after
						content ''
						position absolute
						left -8px
						height 2px
						background-color $red
						width 8px
						top 26px
						transition .3s
					&:last-child
						border none
					&:hover&:after
						left 0
				&__select
					font-family $Light
					font-size 1.125rem
					line-height 22px
					color $red
				&__separator
					border 1px solid #EDEDED
					margin 25px 0
			&-cats
				padding 15px 40px
				border 1px solid #DCDCDC
				box-shadow 0px 4px 15px rgba(0, 0, 0, 0.03)
				&__item
					font-family $Light
					font-size 1.125rem
					line-height 54px
					border-bottom 1px solid #EDEDED
					transition .3s
					position relative
					overflow hidden
					display block
					&:hover
						color $red
						padding-left 16px
					&:after
						content ''
						position absolute
						left -8px
						height 2px
						background-color $red
						width 8px
						top 26px
						transition .3s
					&:last-child
						border none
					&:hover&:after
						left 0
	&__container
		display flex
		flex-wrap wrap
		flex-basis 75%
		justify-content space-between
		padding-left 20px
		&-block
			border 1px solid #E9E9E9
			display flex
			flex-wrap wrap
			margin-right 20px
			flex-basis calc(33.33334% - 15px)
			margin-bottom 20px
			&:nth-child(3n+3)
				margin-right 0
			&-image
				height 202px
				flex-basis 100%
				width 100%
				margin-bottom 20px
			&-title
				flex-basis 100%
				font-family $Light
				font-size 1.125rem
				line-height 27px
				color $black
				margin 0 15px 15px 15px
			&-prop
				flex-basis calc(50% - 15px)
				font-size 0.75rem
				line-height 15px
				margin 0 15px 15px 15px
				font-family $Light
				color $textgray
				display flex
				align-items center
				&:nth-child(3)
					margin-right 0
				&:nth-child(4)
					margin-left 0
				span
					padding-left 5px
					color $black
				.color-product
					margin-left 5px
					border-radius 50%
					background-color $black
					width 11px
					height 11px
					display inline-block
			&-footer
				border-top 1px solid #E9E9E9
				width 100%
				display flex
				padding 20px 30px
				justify-content space-between
				&__item
					color $red
					font-family $Light
					font-size 1.125rem
					line-height 27px
					flex-basis 50%
					button
						color $red
						font-family $Light
						font-size 0.875rem
						line-height 17px
						letter-spacing .7px
						background-color $white
						border 1px solid $red
						padding 7px 17px
						width 100%
						transition .3s
						cursor pointer
						&:hover
							background-color $red
							color $white
		&-navigation
			margin 30px 0 60px
			display flex
			justify-content space-between
			flex-basis 100%
			position relative
			&__numbers
				display flex
				&-item
					border 1px solid $red
					display flex
					align-items center
					justify-content center
					height 56px
					width 56px
					line-height 27px
					font-size 1.125rem
					font-family $Light
					color $black
					margin-left 9px
					transition .3s
					&:hover
						background-color $red
						color $white
			&__arrow
				&-left
					background-color $red
					display flex
					align-items center
					justify-content center
					height 56px
					width 56px
					line-height 27px
					font-size 1.125rem
					font-family $Light
					color $black
					transition .3s
					svg
						transition .3s
						position absolute
						margin-left -1.5px
					&:hover svg
						margin-right 7px
				&-right
					background-color $red
					display flex
					align-items center
					justify-content center
					height 56px
					width 56px
					line-height 27px
					font-size 1.125rem
					font-family $Light
					color $black
					transition .3s
					svg
						transition .3s
						position absolute
					&:hover svg
						margin-left 7px
				&-disabled
					background-color #C2C2C2
					&:hover svg
						margin-left -1.5px
						margin-right 0
@media(max-width: 991px)
	.accessories
		&__title
			flex-wrap wrap
			&-text
				flex-basis 100%
			&-cart
				flex-basis 100%
				justify-content flex-start
				margin-bottom 30px
		&__sidebar
			flex-basis 100%
			&-block
				margin-bottom 25px
				&-titles
					display flex
		&__container
			padding-left 0
			flex-basis 100%
			&-block
				flex-basis calc(50% - 10px)
				&:nth-child(3n+3)
					margin-right 20px
				&:nth-child(2n)
					margin-right 0
@media(max-width: 550px)
	.accessories
		&__container
			&-block
				flex-basis 100%
				margin-right 0
			&-navigation
				margin-top 25px
				margin-bottom 106px
				&__numbers
					justify-content space-between
					flex-basis 100%
					&-item
						margin 0
				&__arrow
					&-right
						position absolute
						top 76px
						right 0
					&-left
						position absolute
						top 76px
						left 0

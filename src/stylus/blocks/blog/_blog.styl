.blog
	display flex
	flex-wrap wrap
	&__title
		flex-basis 100%
		color $black
		font-size 2rem
		font-family $Light
		line-height 39px
		margin 40px 0 30px
	&__sidebar
		flex-basis 25%
		&-block
			box-shadow 0px 4px 15px rgba(0, 0, 0, 0.03)
			position sticky
			margin-bottom 60px
			top 0
			&-titles
				display none
				justify-content space-between
				position relative
				&-title
					background-color $red
					padding 25px 40px
					width 100%
					font-family $Light
					font-size 1.125rem
					line-height 22px
					color $white
				&-button
					cursor pointer
					position absolute
					right 40px
					top calc(50% - 8px)
					width 16px
					height 16px
					display flex
					align-items center
					justify-content center
					transition .3s
			&-cats
				padding 30px 40px
				border 1px solid $red
				&__item
					font-family $Light
					font-size 1.125rem
					line-height 54px
					border-bottom 1px solid #EDEDED
					transition .3s
					position relative
					overflow hidden
					display block
					&:hover
						color $red
						padding-left 16px
					&:after
						content ''
						position absolute
						left -8px
						height 2px
						background-color $red
						width 8px
						top 26px
						transition .3s
					&:last-child
						border none
					&:hover&:after
						left 0
			&-tags
				border 1px solid #EDEDED
				position sticky
				padding 30px 40px
				top 446px
				&__title
					text-transform uppercase
					line-height 14px
					letter-spacing 1px
					font-family $Regular
					font-size 0.75rem
					margin-bottom 5px
				&__item
					font-family $Light
					font-size 1.125rem
					line-height 22px
					color $red
					display inline-block
					margin-bottom 10px
					margin-right 18px
					transition .3s
					&:last-child
						margin-bottom 0
					&:hover
						color $red - 20%
	&__container
		display flex
		flex-wrap wrap
		flex-basis 72%
		justify-content space-between
		&-item
			flex-basis 49.5%
			padding 30px 24px
			height 360px
			display flex
			justify-content flex-end
			flex-direction column
			position relative
			margin-bottom 1%
			&:nth-child(3)
				margin-right 0
			&-category
				text-transform uppercase
				color $white
				letter-spacing 1px
				line-height 14px
				font-size 0.75rem
				font-family $Regular
				background-color $textblack
				padding 7px 10px 5px
				display flex
				align-items center
				position absolute
				top 30px
				left 24px
				transition .3s
				&:hover
					color #606060
			&-date
				text-transform uppercase
				color #606060
				letter-spacing 1px
				line-height 14px
				font-size 0.75rem
				font-family $Regular
				background-color $white
				padding 5px
				position absolute
				right 24px
				display flex
				align-items center
				top 30px
			&-title
				color $black
				font-family Light
				line-height 27px
				font-size 1.125rem
				background-color $white
				display flex
				align-items center
				padding 13px 60px 13px 16px
				position relative
				justify-content space-between
				&-link
					background-color $textblack
					padding 13px 26px
					position absolute
					right 0
					bottom 0
					align-items center
					display flex
					height 100%
					transition .3s
					svg
						transition .3s
						position absolute
						margin-left  -1.5px
					&:hover svg
						margin-left  5px
		&-navigation
			margin 50px 0 60px
			display flex
			justify-content space-between
			flex-basis 100%
			position relative
			&__numbers
				display flex
				&-item
					border 1px solid $red
					display flex
					align-items center
					justify-content center
					height 56px
					width 56px
					line-height 27px
					font-size 1.125rem
					font-family $Light
					color $black
					margin-left 9px
					transition .3s
					&:hover
						background-color $red
						color $white
			&__arrow
				&-left
					background-color $red
					display flex
					align-items center
					justify-content center
					height 56px
					width 56px
					line-height 27px
					font-size 1.125rem
					font-family $Light
					color $black
					transition .3s
					svg
						transition .3s
						position absolute
						margin-left -1.5px
					&:hover svg
						margin-right 7px
				&-right
					background-color $red
					display flex
					align-items center
					justify-content center
					height 56px
					width 56px
					line-height 27px
					font-size 1.125rem
					font-family $Light
					color $black
					transition .3s
					svg
						transition .3s
						position absolute
					&:hover svg
						margin-left 7px
				&-disabled
					background-color #C2C2C2
					&:hover svg
						margin-left -1.5px
						margin-right 0
@media(max-width: 991px)
	.blog
		&__sidebar
			flex-basis 100%
			&-block
				margin-bottom 25px
				&-titles
					display flex
		&__container
			flex-basis 100%
			&-item
				flex-basis 100%
@media(max-width: 550px)
	.blog
		&__container
			&-navigation
				margin-top 25px
				margin-bottom 106px
				&__numbers
					justify-content space-between
					flex-basis 100%
					&-item
						margin 0
				&__arrow
					&-right
						position absolute
						top 76px
						right 0
					&-left
						position absolute
						top 76px
						left 0

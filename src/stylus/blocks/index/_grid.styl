.grid
	display grid
	grid-template-columns repeat(4, 1fr)
	gap 10px
	&__item
		background-size cover
		display flex
		align-items center
		color $white
		justify-content center
		flex-direction column
		text-align center
		min-height 300px
		position relative
		overflow hidden
		cursor pointer
		&-img
			position absolute
			height 100%
			width 100%
			transition .5s
		&:before
			content ''
			position absolute
			background-color $white
			opacity .2
			left 0
			top 0
			height 100%
			width 50%
			transform skewX(-20deg) translateX(-200%)
			z-index 2
		&-title
			font-size 2rem
			font-family $Light
			line-height 39px
			margin-bottom 15px
			z-index 1
		&-separator
			height 1px
			width 33%
			margin 0 auto
			background #ABABAB
			z-index 1
		&-text
			line-height 17px
			color $textblack
			font-family $Light
			font-size 0.875rem
			margin-bottom 15px
			width 80%
			z-index 1
		&-button
			background-color $black
			color $white
			font-family $Light
			font-size 0.875rem
			padding 10px 40px
			transition .3s
			z-index 1
			&:hover
				background-color $black + 20%
		&:nth-child(1)
			grid-column 1 / 3
			grid-row 1 / 1.5
			background-color $black
		&:nth-child(2)
			grid-column 3 / 5
			grid-row 1 / 1.5
		&:nth-child(3)
			grid-column 1 / 3
			grid-row 2 / 3
		&:nth-child(3) > div:nth-child(2)
			color $black
		&:nth-child(4)
			grid-column 3 / 4
			grid-row 2 / 4
		&:nth-child(5)
			grid-column 4 / 5
			grid-row 2 / 4
		&:nth-child(6)
			grid-column 1 / 3
			grid-row 3 / 4
		&:nth-child(7)
			grid-column 1 / 4
			grid-row 4 / 4
		&:nth-child(8)
			grid-column 4 / 5
			grid-row 4 / 5
			background $white
			border 1px solid $black
		&:nth-child(8) > div:nth-child(1)
			color $black
		&:nth-child(8) > div:nth-child(2)
			color $black
			margin-bottom 12px
		&:hover:nth-child(2)&:before,
		&:hover:nth-child(4)&:before,
		&:hover:nth-child(5)&:before,
		&:hover:nth-child(6)&:before,
		&:hover:nth-child(7)&:before
			transition 1s
			transform skewX(-20deg) translateX(300%)
		&:hover &-img
			transform: scale(1.05);
@media(max-width: 991px)
	.grid
		&__item
			min-height auto
			&:nth-child(1)
				grid-column 1 / 5
				grid-row 1 / 2
				max-height 300px
			&:nth-child(2)
				grid-column 1 / 3
				grid-row 2 / 3
				max-height 300px
			&:nth-child(3)
				grid-column 3 / 5
				grid-row 2 / 3
				max-height 300px
			&:nth-child(4)
				grid-column 1 / 3
				grid-row 3 / 4
				max-height 300px
			&:nth-child(5)
				grid-column 3 / 5
				grid-row 3 / 4
				max-height 300px
			&:nth-child(6)
				grid-column 1 / 3
				grid-row 4 / 5
				max-height 300px
			&:nth-child(7)
				grid-column 3 / 5
				grid-row 4 / 5
				max-height 300px
			&:nth-child(8)
				grid-column 1 / 5
				grid-row 5 / 6
				max-height 300px
@media(max-width: 767px)
	.grid
		display flex
		flex-wrap wrap
		&__item
			min-height 140px
			flex-basis calc(50% - 10px)
			margin-bottom 10px
			&:nth-child(1),
			&:nth-child(8)
				flex-basis 100%
				min-height 160px
			&:nth-child(2),
			&:nth-child(4),
			&:nth-child(6)
				margin-right 10px
			&-title
				font-size 0.875rem
				font-family $Light
				line-height 17px
				margin-bottom 10px
				width 80%
			&-separator
				height 1px
				width 33%
				margin 0 auto
				background #ABABAB
			&-text
				line-height 15px
				color $textblack
				font-family $Light
				margin-bottom 15px
				width 80%
			&-button
				background-color $black
				color $white
				font-family $Light
				padding 10px 40px
